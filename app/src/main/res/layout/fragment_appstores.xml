<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="com.ssf.smart.AppStoresFragment">


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/appstores_title_bg"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="12%"
        app:layout_widthPercent="55%" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="62%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="55%" />

    <ImageButton
        android:id="@+id/bt_left"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        app:layout_marginLeftPercent="2%"
        android:background="@drawable/grid_item_selector"
        android:src="@drawable/zuo" />

    <ImageButton
        android:id="@+id/bt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="2%"
        android:visibility="gone"
        android:background="@drawable/grid_item_selector"
        android:src="@drawable/you" />
</android.support.percent.PercentRelativeLayout>
